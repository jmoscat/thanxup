source 'https://rubygems.org'

gem 'rails', '3.2.2'

#Postgresql
gem 'pg'

#Login/authentication
gem 'devise'
gem 'cancan'

#Web server
gem 'unicorn'

#Managing credit card/payments
gem 'stripe'

#Background worker
gem 'sidekiq'

#Memcache
gem 'memcached'

#Riak
gem 'riak-client'

#Social Media gems
gem 'twitter-text'
gem 'twitter'
gem 'tweetstream'
gem 'koala' #facebook

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'haml-rails'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'twitter-bootstrap-rails'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test, :development do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'capybara'
  gem 'shoulda-matchers'
  gem 'factory_girl'
  gem 'factory_girl_rails'
end
