source 'https://rubygems.org'

gem 'rails'

#recaptcha
gem 'recaptcha', :require => 'recaptcha/rails'

#Postgresql
gem 'pg'
gem 'postgres_ext'

#Countries
gem 'carmen-rails'

#Upload Images
gem 'paperclip'

#Handling currency
gem 'money-rails'

#parse phone and validate
gem 'phone'

#QR Codes
gem 'qrencoder'

#Login/authentication
gem 'devise'
gem 'cancan'

#Managing credit card/payments
gem 'stripe'

#Background worker
gem 'sidekiq'

#Memcache
gem 'memcached'

#Calendar
gem 'bootstrap-datepicker-rails'
gem 'bootstrap-timepicker-rails'

#Riak
gem 'ripple', '~> 1.0.0.beta2'

#Social Media gems
gem 'twitter-text'
gem 'twitter'
gem 'tweetstream'
gem 'koala' #facebook

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'haml-rails'
  gem 'coffee-rails'
  gem 'twitter-bootstrap-rails'
  gem 'uglifier'
  gem 'less-rails'
  gem 'therubyracer'
end

gem 'jquery-rails'

group :test, :development do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'capybara'
  gem 'shoulda-matchers'
  gem 'factory_girl'
  gem 'factory_girl_rails'
  gem 'pry'
  gem 'unicorn'
  gem 'annotate'
end
