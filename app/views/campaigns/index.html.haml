.container
  - if @campaigns.present?
    %table.table.table-bordered
      %tr
        %th Name
        %th Description
        %th Start Date
        %th End Date
        %th Stores Involved
        %th &nbsp;
      - for campaign in @campaigns
        %tr
          %td= campaign.name
          %td= campaign.description
          %td= campaign.start_date
          %td= campaign.end_date
          %td= campaign.campaign_stores.collect { |store| Store.find(store.store_id).try(:name) }
          %td
            .btn-group
              %button.btn Action
              %button.btn.dropdown-toggle{'data-toggle' => 'dropdown'}
                %span.caret
              %ul.dropdown-menu
                %li #{link_to 'Edit campaign', edit_owner_campaign_path(owner_id: current_owner.id, id: campaign.key)}
                %li #{link_to 'Delete campaign', owner_campaign_path(owner_id: current_owner.id, id: campaign.key), method: :delete, confirm: 'Are you sure?'}
  - else
    %h4 No campaigns have been created
