#store_state_wrapper
  - parent_region ||= params[:parent_region]
  - country = Carmen::Country.coded(parent_region)

  - if country.nil?
  - elsif country.subregions?
    = popover(:store, :state)
    = subregion_select(:store, :state, parent_region)
    %div
      = popover(:store, :city)
      = text_field(:store, :city, :placeholder => 'City')
    %div
      = popover(:store, :address)
      = text_field(:store, :address, :placeholder => 'Address')
    %div
      = popover(:store, :zip_code)
      = text_field(:store, :zip_code, :placeholder => 'Zip Code')
  - else
    = popover(:store, :state)
    = text_field(:store, :state)
    %div
      = popover(:store, :city)
      = text_field(:store, :city, :placeholder => 'City')
    %div
      = popover(:store, :address)
      = text_field(:store, :address, :placeholder => 'Address')
    %div
      = popover(:store, :zip_code)
      = text_field(:store, :zip_code, :placeholder => 'Zip Code')
