.container
  - if @stores.present?
    %table.table.table-bordered
      %tr
        %th Name
        %th Address
        %th City
        %th State
        %th Zip Code
        %th Country
        %th Email
        %th Phone Number
        %th Type of Business
        %th &nbsp;
      %tr
      - for store in @stores
        %td= store.name
        %td= store.address
        %td= store.city
        %td= store.state
        %td= store.zip_code
        %td= store.country
        %td= store.contact_email
        %td= store.contact_phone_number
        %td= store.type
        %th
          .btn-group
            %button.btn Action
            %button.btn.dropdown-toggle{'data-toggle' => 'dropdown'}
              %span.caret
            %ul.dropdown-menu
              %li #{link_to 'Edit Store', edit_owner_store_path(owner_id: current_owner.id, id: store.key)}
              %li #{link_to 'Delete Store', owner_store_path(owner_id: current_owner.id, id: store.key), method: :delete, confirm: 'Are you sure?'}
              %li #{link_to 'View Coupons', owner_store_coupons_path(owner_id: current_owner.id, store_id: store.key)}
              %li #{link_to 'Add a Coupon', new_owner_store_coupon_path(owner_id: current_owner.id, store_id: store.key)}
  - else
    %h4 No stores have been created
