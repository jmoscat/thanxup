.container
  %h4 #{@store.name} located at #{@store.address} #{@store.city}, #{@store.state} #{@store.zip_code} #{@store.country}
  - if @coupons.present?
    %table.table.table-bordered
      %tr
        %th Title
        %th Description
        %th Type
        %th Discount Type
        %th Money Off
        %th Percent Off
        %th Coupon Shelf Life
        %th &nbsp;
      - for coupon in @coupons
        %tr
          %td= coupon.title
          %td= coupon.description
          %td= coupon.type
          %td= coupon.discount_desc
          %td= coupon.money_off
          %td= coupon.percent_off
          %td= coupon.life_type
          %td
            .btn-group
              %button.btn Action
              %button.btn.dropdown-toggle{'data-toggle' => 'dropdown'}
                %span.caret
              %ul.dropdown-menu
                %li #{link_to 'Edit Coupon', edit_owner_store_coupon_path(owner_id: current_owner.id, store_id: @store.key, id: coupon.key)}
                %li #{link_to 'Delete Coupon', owner_store_coupon_path(owner_id: current_owner.id, store_id: @store.key, id: coupon.key), method: :delete, confirm: 'Are you sure?'}
  - else
    %h4 No coupons have been created
